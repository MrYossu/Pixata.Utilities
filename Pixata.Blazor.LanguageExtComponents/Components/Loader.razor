@typeparam T

@(Data switch {
  Loading<T> => Loading,
  Loaded<T> t => Loaded(t),
  NotLoaded<T> => NotLoaded,
  _ => Loading
})

@code {

  [Parameter]
  public LoadingOption<T> Data { get; set; }

  [Parameter]
  public RenderFragment<Loading<T>> Loading { get; set; }

  [Parameter]
  public RenderFragment<Loaded<T>> Loaded { get; set; }

  [Parameter]
  public RenderFragment<NotLoaded<T>> NotLoaded { get; set; }

}